<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laboratorios | MINSA </title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/cs-skin-elastic.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">
            <div class="top-left">
                <div class="navbar-header">
                    <a class="navbar-brand fa fa-stethoscope" id="inicioSALMIN" href="MostrarCita"> SALMIN</a>
                    @*<a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>*@
                </div>
            </div>
            <div class="top-right">
                <div class="header-menu">

                    <div class="user-area dropdown float-right">
                        <div class="header-menu">
                            <div class="user-area dropdown float-right">


                                <label id="NombreUser">@HttpContext.Current.Session["ValorNombre"].ToString()</label><a> | </a>
                                <label id="rol">Rol:</label>


                                <script type="text/javascript">
                                    const rolType = document.getElementById("rol");
                                    const NameUser = document.getElementById("NombreUser")




                                    if (NameUser.textContent ===  "Maria") {
                                        console.log("Doctor")
                                        rolType.textContent = "Doctor"
                                    }
                                    if (NameUser.textContent  === "Raul") {
                                        console.log("Laboratorista")
                                        rolType.textContent = "Laboratorista"

                                    }
                                    if (NameUser.textContent === "Jose") {
                                        console.log("Paciente")
                                        rolType.textContent = "Paciente"

                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header><!-- /header -->
        <!-- Header-->
        <!-- Left Panel -->
        <aside id="left-panel" class="left-panel">
            <nav class="navbar navbar-expand-sm navbar-default">

                <div id="main-menu" class="main-menu collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a id="antiSubray1" href="MostrarCita"><i class="menu-icon fa fa-laptop"></i>Inicio </a>
                        </li>
                        <li class="menu-title">Menú</li><!-- /.menu-title -->
                        <li id="menuCrearCita" class="menu-item-has-children dropdown">
                            <a href="#" id="antiSubray" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="false" aria-expanded="true">
                                <i class="menu-icon fa fa-calendar-o"></i>Citas
                            </a>
                            <ul id="antiSubray" class="sub-menu children dropdown-menu ">
                                <li><i class="fa fa-pencil-square-o"></i><a id="antiSubray" href="CrearCita">Crear Cita a Pacientes</a></li>
                                <li><i class="fa fa-eye"></i><a id="antiSubray" href="MostrarCita">Citas Programadas</a></li>
                            </ul>
                        </li>
                        <li class="menu-item-has-children dropdown ">
                            <a href="#" id="antiSubray" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="false" aria-expanded="true"> <i class="menu-icon fa fa-file-text-o"></i>Resultados</a>
                            <ul class="sub-menu children dropdown-menu">
                                <li><i id="iconCrRst" class="fa fa-pencil-square-o"></i><a id="antiSubray2" href="CrearResultadoPaciente">Registrar Resultados</a></li>
                                <li><i class="fa fa-eye"></i><a id="antiSubray" href="VerResultadoPaciente">Ver Resultados</a></li>
                            </ul>
                        </li>

                    </ul>
                </div><!-- /.navbar-collapse -->
            </nav>
        </aside><!-- /#left-panel -->

        <script type="text/javascript">
            
            const menu = document.getElementById("menuCrearCita");
            const inicioMenu = document.getElementById("antiSubray1");
            const inicioSl = document.getElementById("inicioSALMIN")
            const crearResultado = document.getElementById("antiSubray2");
            const icon = document.getElementById("iconCrRst");
            

            const NameUserMenu = document.getElementById("NombreUser");

            if (NameUserMenu.textContent === "Jose") {
                menu.hidden = true
                crearResultado.hidden = true;
                icon.hidden = true;
                inicioMenu.href = "/laboratorioDB/VerResultadoPaciente";
                inicioSl.href = "/laboratorioDB/VerResultadoPaciente";
            }
        </script>
        <div class="body-content">
            @RenderBody()
            <hr />



            <footer class="site-footer">
                <div class="footer-inner bg-white">
                    <div class="row">
                        <div class="col-sm-6">
                            Copyright &copy; 2021 Teleinformática
                        </div>
                        <div class="col-sm-6 text-right fa ti-github">
                            Developed by <a href="https://github.com/MDelgado20">María Delgado</a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        </div>
    @*<script src="~/assets/js/login.js"></script>*@

</body>

</html>
